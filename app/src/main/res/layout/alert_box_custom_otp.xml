<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="321dp"
    android:layout_height="254dp"
    android:background="@drawable/alertbox_otp_design">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:background="@drawable/alertbox_heading_design"
        android:fontFamily="@font/roboto_bold"
        android:paddingStart="37dp"
        android:text="VERIFYING OTP"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="239dp"
        android:layout_height="47dp"
        android:layout_marginStart="41dp"
        android:layout_marginTop="20dp"
        android:text="Please enter OTP received on entered mobile number."
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/txtOtpReceived"
        android:layout_width="250dp"
        android:layout_height="34dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/edittext_locality"
        android:ems="10"
        android:fontFamily="@font/roboto"
        android:hint="Enter OTP here"
        android:inputType="number"
        android:maxLength="6"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/btnVerifyOtp"
        android:layout_width="83dp"
        android:layout_height="35dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/edittext_locality"
        android:fontFamily="@font/roboto"
        android:text="VERIFY"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/txtOtpReceived"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/btnCancelAlert"
        app:layout_constraintTop_toBottomOf="@+id/txtOtpReceived" />

    <Button
        android:id="@+id/btnCancelAlert"
        android:layout_width="83dp"
        android:layout_height="35dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/edittext_locality"
        android:fontFamily="@font/roboto"
        android:text="CANCEL"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/txtOtpReceived"
        app:layout_constraintTop_toBottomOf="@+id/txtOtpReceived" />
</androidx.constraintlayout.widget.ConstraintLayout>